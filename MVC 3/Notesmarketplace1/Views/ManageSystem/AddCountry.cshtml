@model Notesmarketplace1.Models.addcountry

@{
    ViewBag.Title = "AddCountry";
}

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section id="myprofile">
    <div class="container-mp">
        <h1>Add Category</h1>
        @using (Html.BeginForm("AddCountry", "ManageSystem", FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1" class="mp01"><span>Country Name<span class="required">*</span></span></label>
                        @Html.TextBoxFor(model => model.name, new { @class = "form-control mp02", @PlaceHolder = "Enter Country  name" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1" class="mp01"><span>Country Code<span class="required">*</span></span></label>
                        @Html.TextBoxFor(model => model.CountryCode, new { @class = "form-control mp02", @PlaceHolder = "Enter Country code" })
                    </div>
                </div>
            </div>
            <button class="btn btn-primary" type="submit" id="btn-submit">SUBMIT</button>
        }
        </div>
</section>

