@using PagedList;
@using PagedList.Mvc;

@model IPagedList<Notesmarketplace1.Models.DownloadModel>
@{
    ViewBag.Title = "AdminDownlodNotes";
}

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section id="member-detail">
    <div class="container-md">
        <h1 style="margin-bottom:20px">Downloaded Notes</h1>
        <div class="progressn">
            <div class="section">
                @using (Html.BeginForm("AdminDownlodNotes", "AdminActivity", FormMethod.Get, new { @id = "submitform" }))
                {
                    <div class="row">
                        <div class="col-md-2">
                            <label for="gender" id="sell">Note</label>
                            @Html.DropDownList("Note", new SelectList(ViewBag.Note), "Select Note ", new { @class = "form-control seller", @id = "month", @name = "Note", onchange = "SubmitForm()" })


                        </div>
                        <div class="col-md-2">
                            <label for="gender" id="sell">Seller</label>
                            @Html.DropDownList("Seller", new SelectList(ViewBag.Seller, "ID", "FirstName"), "Select seller ", new { @class = "form-control note", @id = "month", @name = "Seller", onchange = "SubmitForm()" })

                        </div>
                        <div class="col-md-2">
                            <label for="gender" id="sell">Buyer</label>
                            @Html.DropDownList("Buyer", new SelectList(ViewBag.Buyer), "Select Buyer ", new { @class = "form-control buyer", @id = "month", @name = "Buyer", onchange = "SubmitForm()" })

                        </div>

                        <div class="col-md-6" style="margin-top: 25px;">
                            <div class="btn-search">
                                <input type="text" id="place-search" name="search" placeholder="   &#xF002;    Search">
                                <button type="submit" id="button-search">SEARCH</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="table-responsive">
                <table class="table border">
                    <thead>
                        <tr style="height: 75px; font-weight: 600;">
                            <th scope="col" style="vertical-align: middle;text-align:center;">SR.NO.</th>
                            <th scope="col" style="vertical-align: middle;text-align:center;">
                                @Html.ActionLink(" NOTE TITLE", "AdminDownlodNotes", new { sort = ViewBag.TitleparamPublished })
                            </th>
                            <th scope="col" style="vertical-align: middle;text-align:center;">
                                @Html.ActionLink("CATEGORY", "AdminDownlodNotes", new { sort = ViewBag.CategoryparamPublished })
                            </th>
                            <th scope="col" style="vertical-align: middle;text-align:center;">

                                @Html.ActionLink("BUYER", "AdminDownlodNotes", new { sort = ViewBag.Buyerparam })
                            </th>
                            <th scope="col" style="vertical-align: middle;text-align:center;"></th>
                            <th scope="col" style="vertical-align: middle;text-align:center;">

                                @Html.ActionLink("SELLER", "AdminDownlodNotes", new { sort = ViewBag.Sellerparam })
                            </th>
                            <th scope="col" style="vertical-align: middle;text-align:center;"></th>
                            <th scope="col" style="vertical-align: middle;text-align:center;">
                                @Html.ActionLink("SELL TYPE", "AdminDownlodNotes", new { sort = ViewBag.SelltypeparamPublished })
                            </th>
                            <th scope="col" style="vertical-align: middle;text-align:center;">
                                @Html.ActionLink("PRICE", "AdminDownlodNotes", new { sort = ViewBag.PricepeparamPublished })
                            </th>
                            <th scope="col" style="vertical-align: middle;text-align:center;">
                                @Html.ActionLink("DOWNLOAD DATE/TIME", "AdminDownlodNotes", new { sort = ViewBag.AddedDateparamPublished })
                            </th>


                            <th scope="col" style="vertical-align: middle;text-align:center;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center">
                                    No any record found
                                </td>
                            </tr>
                        }
                        @{
                            var count = 0;
                        }
                        @foreach (var item in Model)
                        {
                            <tr class="table1">

                                <td style="vertical-align: middle;text-align:center;"> @(count + ((Model.PageNumber - 1) * Model.PageSize) + 1)</td>

                                <td style="color: #6255a5; vertical-align: middle;text-align:center;"><a href="/Admin/AdminNotesDetail/@item.Downloaddetail.Id" style="color: #6255a5;">@item.Downloaddetail.NoteTitle</a></td>
                                <td style="vertical-align: middle;text-align:center;">@item.Downloaddetail.NoteCategory</td>
                                <td style="vertical-align: middle;text-align:center;">@item.Downloaddetail.User1.FirstName</td>
                                <td style="vertical-align: middle;text-align:center;">
                                    <a href="/MemberDetail/MemberDetail/@item.Downloaddetail.downloader"><img src="~/Content/img/Dashboard/eye.png"></a>
                                </td>
                                <td style="vertical-align: middle;text-align:center;">@item.Downloaddetail.User.FirstName</td>

                                <td style="vertical-align: middle;text-align:center;"> <a href="/MemberDetail/MemberDetail/@item.Downloaddetail.Seller"><img src="~/Content/img/Dashboard/eye.png"></a></td>
                                <td style="vertical-align: middle;text-align:center;">
                                    @if (@item.Downloaddetail.Ispaid == true)
                                    {
                                        <p>Paid</p>
                                    }
                                    else
                                    {
                                        <p>Free</p>
                                    }
                                </td>
                                <td style="vertical-align: middle;text-align:center;">&#36;@item.Downloaddetail.PurchasedPrice</td>
                                <td style="vertical-align: middle;text-align:center;">@item.Downloaddetail.AttachmentDownloadedDate</td>

                                <td style="vertical-align: middle;text-align:center;">
                                    <div class="dropdown2">
                                        <img src="~/Content/img/front-images/dots.png" class="dots">
                                        <div class="dropdown-content2">
                                            <a href="/UserActivity/Download/@item.Downloaddetail.NoteId">Download Notes</a>
                                            <a href="/Admin/AdminNotesDetail/@item.Downloaddetail.NoteId">View More Details</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="text-center">
            <ul class="pagination">
                <li>
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                    @Html.PagedListPager(Model, page => Url.Action("AdminDownlodNotes",
                        new { page, sort = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
               , new PagedListRenderOptions() { MaximumPageNumbersToDisplay = 5 })
                </li>
            </ul>
        </div>
    </div>
</section>
