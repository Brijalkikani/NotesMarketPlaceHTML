    <script>
        function fileValidation1() {
            var fileInput = document.getElementById('prifile_p');
            var filePath = fileInput.value;
            var allowedExtensions = /(\.jpg|\.jpeg|\.png)$/i;
            if (!allowedExtensions.exec(filePath)) {
                fileInput.value = '';
                document.getElementById('ProfilePicture-error').innerHTML = "plz select only .png ,.jpg, or .jpeg file only";
                document.getElementById('ProfillePicture-error').focus;
                return false;
            }
        }
        function fileValidation() {

            var fileInput = document.getElementById('DisplayPicture');
            var filePath = fileInput.value;
            var allowedExtensions = /(\.jpg|\.jpeg|\.png)$/i;
            if (!allowedExtensions.exec(filePath)) {
                fileInput.value = '';
                document.getElementById('DisplayPicture-error').innerHTML = "plz select only .png ,.jpg, or .jpeg file only";
                document.getElementById('DisplayPicture-error').focus;
                return false;
            }
        }

        function SubmitForm() {
            document.getElementById('submitform').submit();
        }
       
    </script>
