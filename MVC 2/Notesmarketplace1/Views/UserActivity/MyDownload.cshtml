@using PagedList;
@using PagedList.Mvc;

@model IPagedList<Notesmarketplace1.Models.DownloadModel>

@{
    ViewBag.Title = "MyDownload";
}
@{
    Layout = "~/Views/Shared/_Layoutcommon.cshtml";

}

<div class="dashboard-title-wrapper">
    <div class="container-ds">
        <div class="mydownloads">
            <div class="title-section">
                <div class="row">

                    <div class="col-md-6">
                        <h2>My Downloads </h2>
                    </div>
                    @using (Html.BeginForm("MyDownload", "UserActivity", FormMethod.Get))
                    {
                        <div class="col-md-6 ">
                            <div class="btn-search">
                                <input type="text" name="search" id="place-search" placeholder="   &#xF002;    Search">
                                <button type="submit" id="button-search">SEARCH</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="table-responsive">
                <table class="table border">
                    <thead>
                        <tr style="height: 70px; font-weight: 600;">
                            <th scope="col" style="vertical-align: middle;text-align:center;">SR.NO.</th>
                            <th scope="col" style="vertical-align: middle;text-align:center;">
                                @Html.ActionLink(" NOTE TITLE", "MyDownload", new { sort = ViewBag.TitleparamPublished })
                            </th>
                            <th scope="col" style="vertical-align: middle;text-align:center;">
                                @Html.ActionLink("CATEGORY", "MyDownload", new { sort = ViewBag.CategoryparamPublished })
                            </th>
                            <th scope="col" style="vertical-align: middle;text-align:center;">BUYER</th>
                            <th scope="col" style="vertical-align: middle;text-align:center;">
                                @Html.ActionLink("SELL TYPE", "MyDownload", new { sort = ViewBag.SelltypeparamPublished })
                            </th>
                            <th scope="col" style="vertical-align: middle;text-align:center;">
                                @Html.ActionLink("PRICE", "MyDownload", new { sort = ViewBag.PricepeparamPublished })
                            </th>
                            <th scope="col" style="vertical-align: middle;text-align:center;">
                                @Html.ActionLink("DOWNLOAD DATE/TIME", "MyDownload", new { sort = ViewBag.AddedDateparamPublished })
                            </th>
                            <th scope="col"> </th>
                            <th scope="col"> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center">
                                    No any record found
                                </td>
                            </tr>
                        }
                        @{
                            var count = 0;
                        }
                        @foreach (var item in Model)
                        {
                            <tr class="table2">
                                <td>
                                    @(count + ((Model.PageNumber - 1) * Model.PageSize) + 1)
                                </td>
                                    <td style="color: #6255a5;"><a href="/Notes/NotesDetail/@item.Downloaddetail.NoteId">@item.Downloaddetail.NoteTitle</a></td>
                                    <td>@item.Downloaddetail.NoteCategory</td>
                                    <td>@item.Userdetail.EmailId</td>
                                    <td>
                                        @if (@item.Downloaddetail.Ispaid == true)
                                        {
                                            <p>Paid</p>
                                        }
                                        else
                                        {
                                            <p>Free</p>
                                        }
                                    </td>
                                    <td>$@item.Downloaddetail.PurchasedPrice</td>
                                    <td>@item.Downloaddetail.AttachmentDownloadedDate</td>
                                    <td>
                                        <a href="/Notes/NotesDetail/@item.Downloaddetail.NoteId"><img src="~/Content/img/Dashboard/eye.png" role="button" /></a>
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <img src="~/Content/img/front-images/dots.png" class="dots" />
                                            <div class="dropdown-content">
                                                <a href="/UserActivity/Download/@item.Downloaddetail.NoteId">Download Note</a>
                                                <a href="/UserActivity/Review/@item.Downloaddetail.NoteId" data-toggle="modal" data-target="#exampleModal">Add Reviews/Feedback</a>
                                                <a href="#">Report as inappropriate</a>
                                            </div>
                                        </div>
                                        <!-- add review -->
                                        <div class="modal fade " id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">

                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                    <div class="modal-body">
                                                        @using (Html.BeginForm("Review", "UserActivity", FormMethod.Post))
                                                        {
                                                            <h4 class="star-head">Add Review</h4>
                                                            <div class="rate img-responsive">
                                                                <input type="radio" id="star5" name="rate" value="5" />
                                                                <label for="star5" title="text">★ </label>
                                                                <input type="radio" id="star4" name="rate" value="4" />
                                                                <label for="star4" title="text">★ </label>
                                                                <input type="radio" id="star3" name="rate" value="3" />
                                                                <label for="star3" title="text">★ </label>
                                                                <input type="radio" id="star2" name="rate" value="2" />
                                                                <label for="star2" title="text">★ </label>
                                                                <input type="radio" id="star1" name="rate" value="1" />
                                                                <label for="star1" title="text">★ </label>
                                                            </div>
                                                            <br> <br><br>
                                                            <input type="hidden" name="id" value="@item.Downloaddetail.NoteId"/>
                                                            <label for="text-area"><span class="review-label required">Comments/quetions*</span></label>
                                                            <textarea class="form-control required user" placeholder="comments..." rows="5" name="comments"></textarea>
                                                            <button type="submit" class="btn-userP btn-review">SUBMIT</button>
                                                           
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>



                                    </td>
                                  </tr>
                            count++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <div class="text-center">
            <ul class="pagination">
                <li>
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                    @Html.PagedListPager(Model, page => Url.Action("MyDownload",
                        new { page, sort = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
               , new PagedListRenderOptions() { MaximumPageNumbersToDisplay = 5 })
                </li>
            </ul>
        </div>
    </div>
</div>
